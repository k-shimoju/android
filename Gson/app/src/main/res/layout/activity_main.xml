<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_json"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="10"
        android:layout_weight="1"/>

    <Button
        android:text="To Json"
        android:id="@+id/btn_to_json"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />
    <Button
        android:text="Formatted Json"
        android:id="@+id/btn_format_json"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <Button
        android:text="From Json"
        android:id="@+id/btn_from_json"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <Button
        android:text="Complexity To JSON"
        android:id="@+id/complexity_to_json"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <Button
        android:text="Complexity From JSON"
        android:id="@+id/complexity_from_json"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />
</LinearLayout>
